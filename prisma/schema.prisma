generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String       @id @default(uuid())
  email       String       @unique
  password    String
  name        String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  permissions Permission[] @relation("UserPermissions")
}

model Permission {
  name        String    @id
  description String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  users       User[]    @relation("UserPermissions")
  ChatBot     ChatBot[]
}

model ChatBot {
  id           Int           @id @default(autoincrement())
  botId        String        @unique
  token        String        @unique
  name         String        @unique
  description  String
  permissionId String
  permission   Permission    @relation(fields: [permissionId], references: [name])
  type         MessengerType
  chats        Chat[]        @relation("ChatBotChats")
}

model Chat {
  id        Int       @id @default(autoincrement())
  chatBotId Int
  chatId    String    @unique
  name      String    @unique
  bots      ChatBot[] @relation("ChatBotChats")
}

enum MessengerType {
  TELEGRAM
  SLACK
  DISCORD
}

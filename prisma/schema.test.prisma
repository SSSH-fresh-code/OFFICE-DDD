datasource db {
  provider = "sqlite"
  url      = "file:./dev.db?mode=memory&cache=shared"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String       @id @default(uuid())
  email       String       @unique
  password    String
  name        String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  permissions Permission[] @relation("UserPermissions")
}

model Permission {
  name        String    @id
  description String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  users       User[]    @relation("UserPermissions")
  ChatBot     ChatBot[]
}

model ChatBot {
  id           Int        @id @default(autoincrement())
  botId        String     @unique
  token        String     @unique
  name         String     @unique
  description  String
  permissionId String
  permission   Permission @relation(fields: [permissionId], references: [name])
  type         String
  chats        Chat[]     @relation("ChatBotChats")
}

model Chat {
  id     Int       @id @default(autoincrement())
  chatId String    @unique
  name   String    @unique
  type   String
  bots   ChatBot[] @relation("ChatBotChats")
}

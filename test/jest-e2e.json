{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "../",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "**/*.(t|j)s"
  ],
  "coverageDirectory": "./coverage",
  "testEnvironment": "node",
  "setupFiles": [
    "<rootDir>/test/setup-env.ts"
  ],
  "moduleNameMapper": {
      'src(.*)$': '<rootDir>/$1'
  },
  "maxWorkers": 1
}
